{"ast":null,"code":"export default {\n  data() {\n    return {\n      apiUrl: \"https://vue3-course-api.hexschool.io\",\n      apiPath: \"beanhuang\",\n      cartData: {},\n      products: [],\n      productsId: \"\",\n      isLoadingItem: \"\",\n      form: {\n        user: {\n          name: \"\",\n          email: \"\",\n          tel: \"\",\n          address: \"\"\n        },\n        message: \"\"\n      }\n    };\n  },\n\n  components: {\n    VForm: Form,\n    VField: Field,\n    ErrorMessage: ErrorMessage\n  },\n  methods: {\n    getProducts() {\n      axios.get(`${this.apiUrl}/api/${this.apiPath}/products/all`).then(res => {\n        console.log(res);\n        this.products = res.data.products;\n      });\n    },\n\n    //加入購物車 / 參數預設值 qty = 1\n    addToCart(id, qty = 1) {\n      const data = {\n        product_id: id,\n        qty\n      };\n      this.isLoadingItem = id;\n      axios.post(`${this.apiUrl}/api/${this.apiPath}/cart`, {\n        data\n      }).then(res => {\n        console.log(res);\n        this.getCart();\n        this.$refs.productModal.closeModal();\n        this.isLoadingItem = \"\";\n      });\n    }\n\n  },\n\n  mounted() {\n    this.getProducts();\n    this.getCart();\n  }\n\n};","map":{"version":3,"mappings":"AAmEA,eAAe;AACbA,MAAI,GAAG;AACL,WAAO;AACLC,YAAM,EAAE,sCADH;AAELC,aAAO,EAAE,WAFJ;AAGLC,cAAQ,EAAE,EAHL;AAILC,cAAQ,EAAE,EAJL;AAKLC,gBAAU,EAAE,EALP;AAMLC,mBAAa,EAAE,EANV;AAQLC,UAAI,EAAE;AACJC,YAAI,EAAE;AACJC,cAAI,EAAE,EADF;AAEJC,eAAK,EAAE,EAFH;AAGJC,aAAG,EAAE,EAHD;AAIJC,iBAAO,EAAE;AAJL,SADF;AAOJC,eAAO,EAAE;AAPL;AARD,KAAP;AAkBD,GApBY;;AAsBbC,YAAU,EAAE;AACVC,SAAK,EAAEC,IADG;AAEVC,UAAM,EAAEC,KAFE;AAGVC,gBAAY,EAAEA;AAHJ,GAtBC;AA4BbC,SAAO,EAAE;AACPC,eAAW,GAAG;AACZC,WAAI,CACDC,GADH,CACQ,GAAE,KAAKtB,MAAO,QAAO,KAAKC,OAAQ,eAD1C,EAEGsB,IAFH,CAESC,GAAD,IAAS;AACbC,eAAO,CAACC,GAAR,CAAYF,GAAZ;AACA,aAAKrB,QAAL,GAAgBqB,GAAG,CAACzB,IAAJ,CAASI,QAAzB;AACD,OALH;AAMD,KARM;;AAUP;AACAwB,aAAS,CAACC,EAAD,EAAKC,GAAE,GAAI,CAAX,EAAc;AACrB,YAAM9B,IAAG,GAAI;AAC